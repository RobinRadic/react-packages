{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "allowJs": false,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "./node_modules",
        "./types",
        "./es",
        "./lib",
        "./*.ts",
        "*.js"
    ],
    "compileOnSave": true
}
