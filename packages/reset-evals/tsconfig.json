{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "lib": ["es2015", "es2016", "es2017"],
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "declaration": true
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
